<div class="d-flex justify-content-center mt-5">
    <div class="col-5">
        <div class="text-center">
            <h1>Edit Message</h1>
        </div>
        <div>
           <%= form_with(model: [@project, @topic, @message], class: "d-flex") do |form| %>
            <div class="field w-75">
                <%= form.label :message, style: "display: block" %>
                <%= form.text_field :message, class: "form-control", value: @message.message, style: "margin-bottom: .5rem;"%>
            </div>
            <div class="submit d-flex align-items-center">
                <%= form.submit "Update", class: "btn btn-dark", style: "margin-left: 20px;"%>
            </div>
            <% end %>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center my-3 fixed-bottom">
    <%= link_to "Back to messages", project_topics_path, class: "btn btn-info mx-3 text-light"  %>
    <%= button_to "Delete Message", project_topic_message_path(params[:project_id], params[:topic_id], params[:id]), method: :delete, class: "btn btn-danger" %>
</div>